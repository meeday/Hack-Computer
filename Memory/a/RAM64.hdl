/**
 * Memory of 64 registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM64 {
    IN in[16], load, address[6];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address[0..2], a=a, b=b, c=c, d=d, e=e, f=f, g=g, h=h);
    RAM8(in=in, load=a, address=address[3..5], out=ao);
    RAM8(in=in, load=b, address=address[3..5], out=bo);
    RAM8(in=in, load=c, address=address[3..5], out=co);
    RAM8(in=in, load=d, address=address[3..5], out=do);
    RAM8(in=in, load=e, address=address[3..5], out=eo);
    RAM8(in=in, load=f, address=address[3..5], out=fo);
    RAM8(in=in, load=g, address=address[3..5], out=go);
    RAM8(in=in, load=h, address=address[3..5], out=ho);
    Mux8Way16(a=ao, b=bo, c=co, d=do, e=eo, f=fo, g=go, h=ho, sel=address[0..2], out=out);
}